<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org" ng-app="craftStation">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="@Url.Content("~/craft4.png")" type="image/png" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper ">
        <div class="content">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img src="@Url.Content("~/Content/Images/craft2.png")" class="navbar-brand olka-brand" />
                        @Html.ActionLink("Web Craft Station", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
@*                            <li>@Html.ActionLink("Api Test", "Index", "ApiTest", new { area = "" }, null)</li>*@
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container body-content">
                @RenderBody()

            </div>
        </div>
        <div class="container">

            <footer>
                <hr />
                <!-- Start of StatCounter Code for Default Guide -->
                <script type="text/javascript">
                    //<![CDATA[
                    var sc_project = 11302520;
                    var sc_invisible = 0;
                    var sc_security = "1b806655";
                    var scJsHost = (("https:" == document.location.protocol) ?
                    "https://secure." : "http://www.");
                    document.write("<sc" + "ript type='text/javascript' src='" +
                    scJsHost +
                    "statcounter.com/counter/counter_xhtml.js'></" + "script>");
                    //]]>
                </script>
                <noscript>
                    <div class="statcounter">
                        <a title="web stats"
                           href="http://statcounter.com/" class="statcounter">
                            <img class="statcounter"
                                 src="//c.statcounter.com/11302520/0/1b806655/0/" alt="web
stats" />
                        </a>
                    </div>
                </noscript>
                <!-- End of StatCounter Code for Default Guide -->
                <p>&copy; @DateTime.Now.Year - Web Craft Station</p>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-96549107-1', 'auto');
        ga('send', 'pageview');

    </script>
</body>
</html>
