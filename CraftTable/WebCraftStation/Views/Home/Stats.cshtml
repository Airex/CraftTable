<div id="statsContainer">
    <dl class="dl-horizontal">

        <dt>
            Step
        </dt>

        <dd id="step">
            {{ctrl.status.Step}}

        </dd>
        <dt>
            Durability
        </dt>

        <dd id="durability">
            {{ctrl.status.Durability}} / {{ctrl.recipe.Durability}}

        </dd>

        <dt>
            Progress
        </dt>

        <dd id="progress">
            <div>
                <div style="float:left;width: 210px;margin-right:10px;">
                    <div class="progress" style="margin-bottom: 5px;">
                        <div class="progress-bar" role="progressbar" aria-valuenow="{{ctrl.status.Progress/ctrl.recipe.Difficulty*100}}" aria-v aria-valuemin="0" aria-valuemax="100" style="width: {{ctrl.status.Progress/ctrl.recipe.Difficulty*100}}%">
                            <span class="sr-only">
                                {{ctrl.status.Progress}} / {{ctrl.recipe.Difficulty}}
                            </span>
                        </div>
                    </div>
                </div>
                <div style=""> {{ctrl.status.Progress}} / {{ctrl.recipe.Difficulty}}</div>
            </div>
        </dd>

        <dt>
            Quality
        </dt>

        <dd id="quality">
            <div>
                <div style="float:left;width: 210px;margin-right:10px;">
                    <div class="progress" style="margin-bottom: 5px;">
                        <div class="progress-bar" role="progressbar" aria-valuenow="{{ ctrl.status.Quality / ctrl.recipe.MaxQuality*100}}" aria-valuemin="0" aria-valuemax="100" style="width: {{ctrl.status.Quality / ctrl.recipe.MaxQuality*100}}%;">
                            <span class="sr-only">
                                {{ctrl.status.Quality}} / {{ctrl.recipe.MaxQuality}}
                            </span>
                        </div>
                    </div>
                </div>
                <div> {{ctrl.status.Quality}} / {{ctrl.recipe.MaxQuality}}</div>
            </div>

        </dd>

        <dt>
            HQ
        </dt>

        <dd id="highQuality">

            {{ctrl.status.HighQualityChance}}%
        </dd>

        <dt>
            CP
        </dt>

        <dd id="craftPoints">
            <div>
                <div style="float:left;width: 210px;margin-right:10px;">
                    <div class="progress" style="margin-bottom: 5px;">
                        <div class="progress-bar" role="progressbar" aria-valuenow="{{ ctrl.status.CraftPoints / ctrl.craftMan.MaxCraftPoints*100}}" aria-valuemin="0" aria-valuemax="100" style="width: {{ctrl.status.CraftPoints / ctrl.craftMan.MaxCraftPoints*100}}%;">
                            <span class="sr-only">
                                {{ctrl.status.CraftPoints}} / {{ctrl.craftMan.MaxCraftPoints}}
                            </span>
                        </div>
                    </div>
                </div>
                <div> {{ctrl.status.CraftPoints}} / {{ctrl.craftMan.MaxCraftPoints}}</div>
            </div>
            
        </dd>

        <dt>
            Condition
        </dt>

        <dd id="condition">
            <div style="float:left;width: 90px;margin-right:10px;">
                <div class="condition-{{ctrl.formatCondition(ctrl.status.Condition)}}" style="margin-bottom: 5px;">
                    {{ctrl.formatCondition(ctrl.status.Condition)}}
                </div>
            </div>
            <div style="float:left"> <input type="checkbox" ng-model="ctrl.useCondition" ng-change="ctrl.reset()" /></div><div>Use conditions simulation</div>
            
        </dd>


    </dl>
</div>
