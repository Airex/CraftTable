<script id="statsTemplate" type="text/x-jquery-tmpl">
    <dl class="dl-horizontal">
        
        <dt>
            Step
        </dt>

        <dd id="step">
            ${Step}

        </dd>
        <dt>
            Durability
        </dt>

        <dd id="durability">
            ${Durability} / ${MaxDurability}

        </dd>

        <dt>
            Progress
        </dt>

        <dd id="progress">
            <div>
                <div style="float:left;width: 210px;margin-right:10px;">
                    <div class="progress" style="margin-bottom: 5px;">
                        <div class="progress-bar" role="progressbar" aria-valuenow="${ProgressPercent}" aria-valuemin="0" aria-valuemax="100" style="width: ${ProgressPercent}%;">
                            <span class="sr-only">
                                ${Progress} / ${MaxProgress}
                            </span>
                        </div>
                    </div>
                </div>
                <div style=""> ${Progress} / ${MaxProgress}</div>
            </div>
        </dd>

        <dt>
            Quality
        </dt>

        <dd id="quality">
            <div>
                <div style="float:left;width: 210px;margin-right:10px;">
                    <div class="progress" style="margin-bottom: 5px;">
                        <div class="progress-bar" role="progressbar" aria-valuenow="${QualityPercent}" aria-valuemin="0" aria-valuemax="100" style="width: ${QualityPercent}%;">
                            <span class="sr-only">
                                ${Quality} / ${MaxMaxQuality}
                            </span>
                        </div>
                    </div>
                </div>
                <div style=""> ${Quality} / ${MaxQuality}</div>
            </div>

        </dd>

        <dt>
            HQ
        </dt>

        <dd id="highQuality">

            ${HighQualityChance}%
        </dd>

        <dt>
            CP
        </dt>

        <dd id="craftPoints">
            ${CraftPoints} / ${MaxCraftPoints}
        </dd>

        <dt>
            Condition
        </dt>

        <dd id="condition">
            ${Condition}
        </dd>


    </dl>
</script>
<div>
    <div id="statsContainer">

    </div>
</div>