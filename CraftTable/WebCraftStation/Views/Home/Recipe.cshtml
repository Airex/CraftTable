    <div class="form-group">
        <label class="control-label col-md-6">Durability</label>
        <div class="col-md-6">
            <input id="durability" type="number" class="form-control" ng-model="ctrl.settingRecipe.Durability"/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-6">Difficulty</label>
        <div class="col-md-6">
            <input id="difficulty" type="number" class="form-control" ng-model="ctrl.settingRecipe.Difficulty"/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-6">Quality</label>
        <div class="col-md-6">
            <input id="maxQuality" type="number" class="form-control" ng-model="ctrl.settingRecipe.MaxQuality"/>
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-md-6">Start Quality</label>
        <div class="col-md-6">
            <input id="startQuality" type="number" class="form-control" ng-model="ctrl.settingRecipe.StartQuality" />
